<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DescriptionFragment"
    android:orientation="vertical">
    <ImageButton
        android:id="@+id/return_to_fragment"
        android:layout_marginTop="10dp"
        android:src="@drawable/arrow_back"
        android:layout_marginStart="10dp"
        android:backgroundTint="@android:color/transparent"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:id="@+id/bouquet_image_description"
            android:layout_gravity="center"
            android:src="@drawable/qwe"
            android:layout_width="400dp"
            android:layout_height="400dp"/>
        <TextView
            android:id="@+id/bouquet_name_description"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="Букет из роз"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/bouquet_description"
            android:gravity="end"
            android:textSize="16sp"
            android:text="Какое то описание"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center"
            android:text="9 900 ₽"
            android:id="@+id/add_to_shopping_cart_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp" />
        <Button
            android:visibility="gone"
            android:layout_weight="1"
            android:textSize="14sp"
            android:gravity="center"
            android:text="Удалить"
            android:id="@+id/add_to_shopping_cart_description_true"
            android:backgroundTint="@color/cardview_dark_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            />

        <ImageButton
            android:visibility="visible"
            android:layout_gravity="center"
            android:id="@+id/add_to_favourite_description"
            android:src="@drawable/favorite"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <ImageButton
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/remove_from_favourite_description"
            android:src="@drawable/favourite_clicked"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="center"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>